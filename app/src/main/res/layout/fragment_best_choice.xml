<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:id="@+id/fake_horizontal_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <View
        android:id="@+id/fake_vertical_view"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fake_horizontal_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3D Diagnose"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"
        android:textSize="30dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rua do Bispo"
        android:id="@+id/address"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/fake_vertical_view"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignLeft="@+id/fake_vertical_view"
        android:layout_alignStart="@+id/fake_vertical_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="72"
        android:id="@+id/number"
        android:layout_below="@+id/address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/fake_vertical_view"
        android:layout_alignStart="@+id/fake_vertical_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parte"
        android:id="@+id/addressAppend"
        android:layout_below="@+id/number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/fake_vertical_view"
        android:layout_alignStart="@+id/fake_vertical_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(21)25020028"
        android:id="@+id/textView2"
        android:layout_below="@+id/addressAppend"
        android:layout_alignLeft="@+id/fake_vertical_view"
        android:layout_alignStart="@+id/fake_vertical_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3ddiagnose@gbl.com.br"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/fake_vertical_view"
        android:layout_alignStart="@+id/fake_vertical_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1" />

</RelativeLayout>